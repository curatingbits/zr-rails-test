<%= simple_form_for @page, remote: true, html: { id: :site_form } do |f|%>
    <%= f.input :name, required: true %>
    <%= f.input :path, required: true %>
    <%= f.input :header, required: true %>
    <%= f.input :body, required: true, :as => :text, :input_html => {:rows => 10}  %>
    <%= f.input :photo, required: true %>
    <%= f.input :photo_cache, as: :hidden %>

  <%end%>
