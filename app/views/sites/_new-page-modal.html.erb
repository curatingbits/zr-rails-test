<div class="modal fade" id="newPageModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">New Page</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

<%= simple_form_for @page, url: pages_path, remote: true do |f| %>
  <div class="modal-body">
    <%= f.input :name, required: true %>
    <%= f.input :path, required: true %>
    <%= f.input :header, required: true %>
    <%= f.input :body, required: true %>
    <%= f.input :photo, required: true %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :site_id, :as => :hidden, :input_html => { :value => @site.id} %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id} %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= f.submit 'Create Page', class: 'btn btn-primary' %>
  </div>
<% end %>

</div>
</div>
</div>
