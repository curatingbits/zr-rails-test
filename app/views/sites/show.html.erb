<div class="container">

  <div class="row">
    <div class="col-12">
      <%= render 'sites/form', site: @site %>
    </div>
  </div>

  <div class="row mt-3">
    <%= render 'sites/new-page-button' %>
  </div>

  <% if @site.pages.length === 0  %>
  <div id="page-list">
    <p> There are no pages associated with this site. </p>
  </div>
  <% else %>

  <div id="page-list">
    <div class="row">
      <%= render @site.pages %>
    </div>
  </div>
  <% end %>
</div>

<div id="notice"></div>
