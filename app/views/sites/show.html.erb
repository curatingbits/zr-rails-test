<div class="container">

  <div class="row">
    <div class="col-12">
      <div class="jumbotron jumbotron-fluid">
       <h4><span id="siteName"> Site <%= @site.name %></span></h4>
        <%= render 'sites/form', site: @site %>
        <div class="mb-3 mr-3 float-right">
        <%= render 'sites/new-page-button' %>
        </div>
      </div>
    </div>
  </div>

  <% if @site.pages.length === 0  %>
  <div id="page-list">
    <div class="row">
    <p> There are no pages associated with this site. </p>
    </div>
  </div>
  <% else %>

  <div id="page-list">
    <div class="row">
      <%= render @site.pages %>
    </div>
  </div>

  <% end %>
</div>

<div id="notice"></div>
